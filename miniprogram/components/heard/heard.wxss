/* components/heard/heard.wxss */
.heard-class {
  position: relative;
  height: 270rpx;
  width: 100%;
}

.img-class {
  background: white;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  top: 110rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 2px solid rgba(255, 255, 255, 0.6);
  text-align: center;
}

.img-class button {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
}

.bg-class {
  position: absolute;
  left: -25%;
  top: -70%;
  width: 1116rpx;
  height: 410rpx;
  background: linear-gradient(225deg, #A6D6FF 0%, #0084F4 100%);
  transform: matrix(-1, 0, 0, 1, 0, 0);
  border-radius: 50%;
  filter: drop-shadow(0px 16px 16px rgba(50, 50, 71, 0.08)) drop-shadow(0px 24px 32px rgba(50, 50, 71, 0.08));
}