/* components/item/item.wxss */
.item-class {
  margin-bottom: 40rpx;
  position: relative;
  height: 190rpx;
  width: 590rpx;
  padding: 40rpx 30rpx;
  background: #FFFFFF;
  border: 2rpx solid rgba(228, 228, 228, 0.6);
  box-shadow: 0px 32rpx 32rpx rgba(50, 50, 71, 0.08), 0px 48rpx 64rpx rgba(50, 50, 71, 0.08);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}

.type-class {
  position: absolute;
  right: 34rpx;
  bottom: 34rpx;
}

.img-class {
  flex: 0 0 150rpx;
  height: 190rpx;
}

.text-class {
  flex: auto;
  height: 100%;
  margin-left: 30rpx;
  position: relative;
}

.text-class .name {
  font-weight: 700;
  font-size: 15px;
  color: #151522;
  line-height: 22px;

}

.text-class .title {
  margin-top: 10rpx;
  font-weight: 400;
  font-size: 10px;
  color: #999999;
  line-height: 22px;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.text-class .icon {
  position: absolute;
  bottom: 0%;
  font-weight: 400;
  font-size: 11px;
  color: #999999;
  align-self: flex-end;
}

.text-class .icon .text-class {
  margin-left: 10rpx;
}